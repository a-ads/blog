{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@styles/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@ui": ["src/components/ui"],
      "@components": ["src/components"],
      "@icons": ["src/components/icons"],
      "@utils": ["src/utils"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*",
    "types/global.d.ts"
  ]
}
